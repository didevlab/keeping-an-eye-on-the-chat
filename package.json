{
  "name": "keeping-an-eye-on-the-chat",
  "version": "0.1.0",
  "private": true,
  "description": "Lightweight desktop overlay for chat.",
  "main": "src/main.js",
  "scripts": {
    "check-deps": "node scripts/check-deps.js",
    "prestart": "npm run check-deps",
    "prestart:overlay": "npm run check-deps",
    "prestart:diag": "npm run check-deps",
    "start": "electron .",
    "start:overlay": "cross-env OVERLAY_DEBUG=0 DIAGNOSTICS=0 electron .",
    "start:diag": "cross-env OVERLAY_DEBUG=1 DIAGNOSTICS=1 electron .",
    "build:win": "npm run build:win:zip",
    "build:win:zip": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win zip",
    "build:win:nsis": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win nsis",
    "dist": "electron-builder"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "gsap": "^3.12.5"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.overlay.keeping-an-eye-on-the-chat",
    "productName": "Keeping an Eye on the Chat",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "signAndEditExecutable": false
    }
  }
}
