{
  "name": "keeping-an-eye-on-the-chat",
  "version": "0.0.0",
  "private": true,
  "description": "Lightweight Twitch chat overlay with animated avatar for streamers",
  "author": {
    "name": "didevlab",
    "url": "https://github.com/didevlab"
  },
  "homepage": "https://github.com/didevlab/keeping-an-eye-on-the-chat",
  "repository": {
    "type": "git",
    "url": "https://github.com/didevlab/keeping-an-eye-on-the-chat.git"
  },
  "bugs": {
    "url": "https://github.com/didevlab/keeping-an-eye-on-the-chat/issues"
  },
  "license": "MIT",
  "main": "dist/main/index.js",
  "scripts": {
    "check-deps": "node scripts/check-deps.js",
    "prebuild:ts": "npm run check-deps",
    "prestart": "npm run build:ts",
    "prestart:overlay": "npm run build:ts",
    "prestart:diag": "npm run build:ts",
    "start": "electron .",
    "start:overlay": "cross-env OVERLAY_DEBUG=0 DIAGNOSTICS=0 electron .",
    "start:diag": "cross-env OVERLAY_DEBUG=1 DIAGNOSTICS=1 electron .",
    "typecheck": "tsc -p config/tsconfig.main.json --noEmit && tsc -p config/tsconfig.preload.json --noEmit && tsc -p config/tsconfig.renderer.json --noEmit",
    "build:ts": "tsc -p config/tsconfig.main.json && tsc -p config/tsconfig.preload.json && tsc -p config/tsconfig.renderer.json && npm run copy-assets",
    "copy-assets": "node scripts/copy-assets.js",
    "build:win": "npm run build:ts && npm run build:win:zip",
    "build:win:zip": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win zip",
    "build:win:nsis": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win nsis",
    "dist": "npm run build:ts && electron-builder"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "gsap": "^3.12.5"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "com.overlay.eyeonchat",
    "productName": "EyeOnChat",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "icon": "logo.ico",
      "signAndEditExecutable": false
    },
    "linux": {
      "icon": "logo.png",
      "target": ["AppImage"],
      "category": "Utility"
    }
  }
}
